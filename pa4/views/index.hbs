<!doctype html>
<html>
<head>
    <base href="/">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Bookmarks</title>

    <link rel="stylesheet" href="/assets/style/style.css">
    <link rel="stylesheet" href="/assets/lib/components-font-awesome/css/font-awesome.min.css">

</head>
<body>
<noscript>
    <div class="noscriptmsg">
        Javascript not enabled.
    </div>
</noscript>
<header class="container">
    <h1>Bookmark Manager</h1>
    <h4 class="sub-header">Wecodeinourunderpants - <span class="hinted-sub-header">
        cse 136 with Professor Thomas Powell</span></h4>
</header>

<bm-app id="app-content" class="container" style="height: 64em;">
    <div class="row">
        <div class="col-md-4">
            <div id="bookmark-explorer">
                <div id="bookmark-actions">
                    <div class="action-button-group">
                        <a class="box action-button" href="/bookmarks/create">
                            <span class="fa fa-plus-square-o"></span>
                        </a>
                        <a class="box action-button" href="/bookmarks/createfolder">
                            <span class="fa fa-folder-o"></span>
                        </a>
                        <a class="box action-button" href="/bookmarks/upload-dialog">
                            <span class="fa fa-cloud-upload"></span>
                        </a>
                        <a class="box action-button" href="bookmark-export.csv" download>

                            <span class="fa fa-cloud-download"></span>
                        </a>
                    </div>

                    <div class="row">
                        <div class="search-bar col-xs-8">
                            <form method="post" action="bookmarks/search">
                            <input type="search" name="keywords" placeholder="Search">
                            <i class="fa fa-search" aria-hidden="true" title="Search"></i>
                            </form>
                        </div>
                        <div class="sort-dropdown col-xs-4">
                            <form method="post" action="bookmarks/sort">
                                <select name="options" onchange='this.form.submit()'>
                                    <option>Sort</option>
                                    <option>url</option>
                                    <option>name</option>
                                    <option>description</option>
                                    <option>keywords</option>
                                    <option value="(case when favorite then 1 when favorite is null then 2 else 3 end)">favorite</option>
                                </select>
                            </form>
                            <i class="fa fa-chevron-down" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>

                <div style="background-color: #A2AEBB"></div>

                <hr>
                <div>
                    <ul id="bookmark-list">
                        {{> bookmarks/bookmarks }}
                    </ul>
                </div>
            </div>


        </div>
        <div id="bookmark-dialog" class="col-md-8">
            <!-- Your dialogs will get appended here -->
            {{#if showCreateFolderDialog }}
                {{> bookmarks/create-folder-dialog }}
            {{/if}}

            {{#if error}}
                {{> bm-error-dialog}}
            {{/if}}

            {{#if showCreateDialog }}
                {{> bookmarks/create-bookmark-dialog }}
            {{/if}}

            {{#if showEditDialog }}
                {{> bookmarks/edit-bookmark }}
            {{/if}}

            {{#if showUploadDialog }}
                {{> bookmarks/upload-file }}
            {{/if}}

            
            {{#if showConfirmDeleteDialog }}
                {{> bookmarks/confirm-delete }}
            {{/if}}

            {{#if showEditFolderDialog }}
                {{> bookmarks/edit-folder-dialog }}
            {{/if}}


        </div>

    </div>
</bm-app>

<script src="/assets/lib/handlebars/handlebars.min.js"></script>
<script src="/assets/lib/dropzone/dist/min/dropzone.min.js"></script>
<script src="/assets/javascript/templates.js"></script>
<script src="/assets/javascript/script.js"></script>

</body>
</html>