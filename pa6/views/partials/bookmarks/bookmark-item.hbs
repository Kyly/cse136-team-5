<li class="list-item-style">
    <div class="bookmark-item split-list" >
        <div>
            <a class="bookmark-link" href="{{url}}" target="_blank">
                <span class="icon-bookmark bookmark-icons hand"></span>{{ name }}
            </a>
        </div>
        <div>
            <a title="Favorite" class="action-button" href="/bookmarks/favorite?id={{id}}&fav={{favorite}}">
                <span class="{{#if favorite}}icon-star{{else}}icon-star-empty{{/if}} edit-favorite-icons hand"></span>
            </a>

            <a title="Edit" class="action-button" href="/bookmarks/editbookmark?id={{id}}"><span class="icon-edit edit-favorite-icons hand"></span></a>
        </div>
    </div>
</li>
